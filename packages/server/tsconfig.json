{
	"compilerOptions": {
		"watch": true,
		"allowJs": true,
		"target": "ES5",
		"module": "commonjs",
		"noImplicitAny": true,
		"removeComments": true,
		"sourceMap": false,
		"outDir": "lib",
		"strict": true,
		// "skipDefaultLibCheck": true,
		"preserveConstEnums": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		// For React
		"moduleResolution": "node",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"jsx": "react"
	},
	"include": ["src/**/*"]
}
